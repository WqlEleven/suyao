page {
  background-color: #f1f1f1;
}

.text-right {
  text-align: right;
}

.item {
  background-color: #fff;
  border-top: solid 1px #e4e4e4;
  margin-bottom: 7rpx;
  font-size: 26rpx;
  color: #4e4e4e;
  clear: both;
}

.arrow_wrap {
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  right: 20rpx;
  top: 24rpx;
}

.toAddress, .ticket, .goodsTotalNum, .priceDetail, .notice {
  height: 74rpx;
  line-height: 74rpx;
  position: relative;
  padding: 0 24rpx;
}

.goodsList {
  border-top: solid 1px #f2f2f2;
  border-bottom: solid 1px #f2f2f2;
  padding-bottom: 35rpx;
}

.goods {
  padding: 35rpx 24rpx 0;
  overflow: hidden;
}

.goods text {
  line-height: 30rpx;
  display: block;
}

.goods text.type_rx {
  display: inline-block;
  color: #fff;
  font-size: 20rpx;
  padding: 1rpx 13rpx;
  background: #d60005;
  border-radius: 18rpx;
  margin-left: 10rpx;
}

.goodsPic {
  width: 160rpx;
  height: 125rpx;
  float: left;
  margin-right: 20rpx;
}

.goodsInfo {
  width: 350rpx;
  float: left;
}

.PriceNum {
  width: 172rpx;
  float: left;
  text-align: right;
}

.goodsName {
  font-size: 26rpx;
  color: #4d4c4c;
}

.goodsDes {
  font-size: 22rpx;
  overflow: hidden;
  height: 60rpx;
}

.goodsSpec {
  padding-top: 20rpx;
  font-size: 26rpx;
}

.goodsPrice {
  font-size: 26rpx;
  margin-bottom: 50rpx;
}

.priceDetail .text {
  padding-right: 40rpx;
  display: inline-block;
}

.priceDetail text {
  color: #ce3b3b;
}

.weui-cell {
  padding: 10px 15px 5px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  border-bottom: 10rpx solid #f2f2f2;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  align-items: center;
}

.weui-uploader__title {
  flex: 1;
}

.weui-uploader__info {
  color: #b2b2b2;
}

.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}

.weui-uploader__files {
  float: left;
  /* margin-right: 9px; */
  margin-bottom: 0rpx;
  position: relative;
}

.weui-uploader__file {
  float: left;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  position: relative;
}

.weui-uploader__img {
  display: block;
  width: 158rpx;
  height: 158rpx;
}

.imgClear {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 0px;
  right: 0px;
  color: #fff;
  background-color: #ccc;
  text-align: center;
  line-height: 36rpx;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-bottom: 9px;
  width: 154rpx;
  height: 54rpx;
  border: 1px solid #d9d9d9;
  padding-top: 100rpx;
  font-size: 26rpx;
  text-align: center;
}

.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.weui-uploader__input-box:before {
  width: 2px;
  height: 60rpx;
}

.weui-uploader__input-box:after {
  width: 60rpx;
  height: 2px;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.distribution {
  padding: 20rpx 25rpx;
  overflow: hidden;
  border-bottom: 10rpx solid #f2f2f2;
}

.distribution .fl, .distribution .fr {
  width: 330rpx;
  padding: 5px 20rpx;
  text-align: center;
  border: 3rpx solid #949494;
  box-sizing: border-box;
  height: 216rpx;
}

.distribution .on {
  border: 3rpx solid #d30000;
  background: #d30000;
  color: #fff;
}

.distribution .fl {
  float: left;
}

.distribution .fr {
  padding: 67rpx 0;
  float: right;
}

.distribution .on .title1, .distribution .on .title2, .distribution .on .title3 {
  color: #fff;
}

.distribution .title1 {
  font-size: 26rpx;
  color: #c40000;
}

.distribution .title2 {
  font-size: 24rpx;
  color: #4d4c4c;
}

.distribution .title3 {
  font-size: 24rpx;
  color: #949494;
}

.defaultAddress {
  padding: 0 24rpx;
  background-color: #fff;
}

.defaultAddress .user {
  padding: 10px 0;
}

.defaultAddress .user:after {
  content: "";
  display: block;
  clear: both;
}

.defaultAddress .name {
  font-size: 16px;
  float: left;
  color: #333;
}

.defaultAddress .tel {
  font-size: 16px;
  padding-left: 30rpx;
  color: #333;
}

.defaultAddress .ress {
  padding-bottom: 15px;
  font-size: 12px;
  color: #999;
}

.site {
  position: relative;
  border-bottom: 10rpx solid #f2f2f2;
}

.site .notice {
  border-bottom: 10rpx solid #f2f2f2;
}

.site .item {
  display: flex;
  padding: 20rpx 24rpx;
  background: #fff;
  margin: 0;
  border: 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.site .item.on {
  color: #fff;
  background: #d30000;
}

.site .item .date {
  padding-left: 20rpx;
  flex: 2;
}

.site .item .num {
  flex: 1;
  padding-right: 20rpx;
  text-align: right;
}

.footer {
  background: #fff;
  position: fixed;
  border-top: 1px solid #eee;
  left: 0;
  right: 0;
  bottom: 0;
  height: 40px;
}

.footer .right {
  float: right;
}

.footer .left {
  float: left;
}

.footer .left {
  line-height: 40px;
  font-size: 14px;
  padding-left: 15px;
  color: #2f2f2f;
}

.footer .left .span {
  color: #000;
  padding-left: 5px;
}

.footer .right button {
  height: 40px;
  background-color: #c40000;
  border: none;
  border-radius: 0;
  color: #fff;
  padding: 0 40px;
  font-size: 30rpx;
  line-height: 80rpx;
}

.blank {
  height: 80rpx;
}
