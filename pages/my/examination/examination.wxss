.index-nav{
  background-color: #fff;
  position: relative;
  font-size:26rpx;
  width: 100%;
  padding-bottom: 90rpx;
  border-bottom:10rpx solid #f2f2f2;
}
.index-nav .dzjx_bg{
  width: 100%;
  height: 252rpx;
}
.shopkeeper{
  position: absolute;
  left:26rpx;
  bottom: 18rpx;
}
.shopkeeper .shoph{
  background-color: #fff;
  border-radius: 5px;
  width: 140rpx;
  height: 140rpx;
}
.shopkeeper .shoph image{
  width: 128rpx;
  height: 128rpx;
  margin: 6rpx;
}
.shopkeeper .shopmess{
  position: absolute;
  left:154rpx;
  width:440rpx;
  bottom:0; 
}
.shopkeeper .shopmess text{
  display: block;
}
.shopkeeper .firname{
  font-size: 30rpx;
  color: #373737;
  line-height: 38rpx;
}
.shopkeeper .secname{
  color: #6a6a6a;
  font-size: 26rpx;
}
.usertype{
  font-size: 26rpx;
  color: #d80000;
  border:1px solid #d80000;
  border-radius: 2px;
  /*width: 102rpx;*/
  line-height: 44rpx;
  text-align: center;
  position: absolute;
  right: 25rpx;
  bottom: 22rpx;
}
.nav{
  width:100%;
  display:flex;
  border-bottom: 1px solid #f2f2f2;
  text-align:center;
}
.nav .item{
  flex: 1;
  text-align: center;
  line-height:40rpx;
  font-size: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2px solid #fff;
}
.nav .item.on{
  color:#d70000;
  border-bottom: 2px solid #d70000;
}
.nav .item image{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
}
.video-item{
  padding: 30rpx 90rpx 30rpx 30rpx;
  width:100%;
  box-sizing:border-box;
  border-bottom: 10rpx solid #f2f2f2;
  position:relative;
}
.video-item .title{
  font-size: 30rpx;
  color:#4d4c4c;
}
.video-item .title text{
  border:1px solid #ff0f0f;
  color:#d60005;
  font-size: 24rpx;
  padding:3rpx 5rpx;
  margin-right:20rpx;
}
.video-item  .time{
  padding: 10rpx 0;
  font-size: 26rpx;
  color:#727272;
}
.video-item .score{
  font-size: 26rpx;
  color:#727272;
}
.video-item .score text{
  font-size: 40rpx;
  color: #db2226;
}
.video-item image{
  position:absolute;
  right: 40rpx;
  top:50%;
  width: 30rpx;
  height:30rpx;
  margin-top: -15rpx;
}
.shares{
  background: rgba(0, 0, 0, 0.5);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  top:24rpx;
  right:30rpx;
  overflow: hidden;
}
.btn_share{ 
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx auto;
  display: block
}
.shareBox{
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
}
.shareBox video{
  margin-top:300rpx;
  width:100%;
}
.shareBox .win_share{
  background: #fff;
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 40rpx 0;
  z-index: 22;
}
.shareBox .win_share .share1{
  width: 50%;
  float: left;
  text-align: center;
}
.shareBox .win_share .share1 image{
  width: 60rpx;
  height: 60rpx;
  display: inline-block
}
.shareBox .win_share .share1 text{
  display: block;
  margin-top: 20rpx;
}
.blankShare{
  position: absolute;
  top:0;
  width: 100%;
  height: 80%;
}
.shareBox button{
  background:transparent;
  font-size:26rpx;
  color:#414141;
  line-height:45rpx;
} 
.shareBox button::after {
  border:0;
  font-size: 26rpx;
  background-color: fff;
}
.shareBox .win_share .share1 button text{
  display: block;
  margin-top: 13rpx
}
