page{
  background:#f2f2f2;
}
.exam .title{
  background: #c40000;
  padding: 30rpx 25rpx;
  font-size: 30rpx;
  color:#fff;
  line-height:35rpx;
  display: flex;
}
.exam .title image{
  width:35rpx;
  height:35rpx;
  margin-right:20rpx;
}
.exam .item{
  padding:30rpx  25rpx;
  border-bottom: 4rpx solid #f2f2f2;
  background: #fff;
}
.exam .item .list_title{
  padding:20rpx 0;
  font-size: 28rpx;
  color:#4d4c4c;
}
.answer .list{
  padding:10rpx;
  font-size: 24rpx;
  line-height:35rpx;
  color:#727272;
}
.answer .list text{
  float: left;
  width:35rpx;
  height:35rpx;
  background:#c7c7c7;
  color:#fff;
  border-radius:50%;
  text-align:center;
  line-height:35rpx;
  margin-right:20rpx;
}
.answer .list.on{
  color:#d70000;
}
.answer .list.on text{
  background: #d70000;
}
.exam .bottom_bank{
  height:100rpx;
  width:100%;
}
.exam .bottom{
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  height:100rpx;
  border-top: 1px solid #bebebe;
  background:#fff;
}
.exam .fl{
  width: 325rpx;
  float:left;
  line-height:100rpx;
  font-size: 30rpx;
  color:#949494;
  padding-left:50rpx;
}
.exam .fl .time{
  color:#c40000;
  font-size:34rpx;
  line-height:100rpx;
  margin-left: 20rpx;
}
.exam button.fr{
  width: 200rpx;
  background: #c40000;
  color:#fff;
  float: right;
  line-height:100rpx;
  border-radius:0;
  font-size: 30rpx;
}
.opa{
  width:100%;
  height:100%;
  position:fixed;
  left:0;
  top:0;
  background:rgba(0,0,0,0.5);
}
.grade{
  width:700rpx;
  background:#fff;
  position:fixed;
  left: 25rpx;
  top: 20%;
  padding:60rpx 0 30rpx;
}
.grade .close{
  width:66rpx;
  height:66rpx;
  position:absolute;
  top: -120rpx;
  left:50%;
  margin-left: -33rpx;
}
.grade .success{
  width:270rpx;
  margin: 0 auto;
  display:block;
}
.grade .gradetitle  {
  text-align: center;
  font-size:30rpx;
  padding:20rpx 0;
  color:#4d4c4c;
}
.grade .score{
  font-size: 24rpx;
  color:#4d4c4c;
  text-align:center;
  padding-bottom:30rpx;
}
.grade .score text{
  font-size:80rpx;
  color:#c40000;
}
.grade .score-list{
  display: flex;
  border-top: 1px solid #bebebe;
  padding: 40rpx 0;
}
.grade .score-list .score_item{
  flex: 1;
  text-align:center;
  border-right:1px solid #bebebe;
  color:#4d4c4c;
}
.grade .score-list .score_item .tit{
  padding-bottom:20rpx;
}
.grade .score-list .score_item text{
  font-size:40rpx;
  color:#c40000;
}
.grade .score-list .score_item:last-child{
  border:none;
}
.grade .button{
  width: 620rpx;
  margin: 0 auto;
  background: #c40000;
  border-radius:0;
  font-size:30rpx;
  color:#fff;
  line-height:90rpx;
}
.fixed{
  line-height:28rpx;
  color:#d70000;
  font-size: 26rpx;
  text-align: center;
  padding:0 0 20rpx;
}