.clearfix{
  overflow: hidden;
}
.item,
.item2{
  padding: 10rpx 40rpx;
  border-bottom:solid 2rpx #eee;
  font-size: 28rpx;
  color: #333;
}
.item .label,
.item2 .label{
  height: 80rpx;
  line-height: 80rpx;
  width: 150rpx;
  float: left;
}
.item .inputArea{
  width: 520rpx;
  float: left;
}
.item .inputArea input,
.item .inputArea picker{  
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
}
.item textarea{
  clear: both;
  width: 100%;
  display: block;
  min-height: 80rpx;
  line-height: 40rpx;
}
.item2{
  position: relative;
}
.item2:after{
  content: '>';
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -20rpx;
  height: 40rpx;
  width: 40rpx;
  display: block;
  font-size: 26rpx;
  color: #ccc;
  transform: scaleY(2);
}
.item2 .label{
  width: 240rpx;
}
.item2 .previewPic{
  width: 430rpx;
  text-align: right;
  float: right;
  /* padding: 10rpx 0;s */
  height: 80rpx;
}
.item2 .previewPic image{
  display: inline-block;
  margin-right: 10rpx;
  width: 100rpx;
  height: 80rpx;
}
.required{
  padding-left: 4rpx;
  font-size: 26rpx;
  color: #f00;
}
.btn-submit{
  width:100%;
  height:90rpx;
  font-size:32rpx;
  text-align:center;
  line-height:90rpx;
  background-color:#b6002d;
  color:#fff;
}