page{
  height: 100%;
  overflow: hidden;
}
.selectedCity{
  height:80rpx;
  line-height:80rpx;
  border-bottom:solid 10rpx #f2f2f2;
  font-size:30rpx;
  padding:0 20rpx;
  color:#000;
}
.county{
  width: 250rpx;
  float: left;
  background-color: #eee;
  min-height:calc(100% - 90rpx);
}
.county .item{
  padding:20rpx;
  border-bottom:solid 2rpx #fff;
  border-left:solid 10rpx #eee;
  font-size:28rpx;
  color:#333;
}
.county .item.active{
  border-left:solid 10rpx #b6002d;
  color: #b6002d;
}
.hospitalList{
  float: left;
  width: 500rpx;
}
.hospitalList .item{
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.nodata{
  padding: 80rpx 20rpx;
  text-align: center;
}
.hospitalAdd{
  margin-top:20px;
}
.hospitalAdd .tip{
  text-align:left;
  margin:0 0 2rpx 1%;
}
.hospitalAdd input{
  margin: 2rpx 0 0 1%;
  height:60rpx;
  border: 1px solid #666;
  width: 70%;
  float: left;
}
.hospitalAdd .submit{
  width:24%;
  height:62rpx;
  font-size: 24rpx;
  line-height: 62rpx;
}