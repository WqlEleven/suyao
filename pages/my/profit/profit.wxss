page{
  font-size: 30rpx;
  color: #3f3f3f;
}
.item{
  border-bottom: solid 1px #eee;
  margin: 0 20rpx;
  padding: 30rpx 0;
  position: relative;
}
.text{
  width: 600rpx;
  padding-top: 20rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #8d8d8d;
}
.arrow_wrap {
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 20rpx;
    height: 20rpx;
    margin-top: -10rpx;
}
.red{
  color: #c30000;
}
.footer{
  background:#f9f9f9;
  color:#a9b7b7;
  font-size: 24rpx;
  text-align: center;
  position: fixed;
  bottom:0;
  width: 100%;
  padding: 10rpx 0 5rpx;
}
.footer navigator{
  display: inline-block;
  width: 25%;
}
.footer navigator image{

  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto 8rpx;
}
.footer .cur{
  color: #1b1b1b
}
.blank{
  height: 97rpx
}