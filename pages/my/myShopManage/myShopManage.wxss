page {
  background-color: #fff;
  font-size: 26rpx;
  color: #4d4c4c;
}

.search {
  background-color: #c40000;
  padding: 26rpx 50rpx;
  position: relative;
}

.search input {
  background-color: #fff;
  border-radius: 2px;
  padding: 5rpx 70rpx 5rpx 22rpx;
  line-height: 64rpx;
}

.search .btn-search {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 80rpx;
  top: 40rpx;
  z-index: 1;
}

.tab {
  background-color: #c40000;
  height: 76rpx;
  border-top: solid 1px #9f0000;
  line-height: 76rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
}

.tabList {
  width: 250rpx;
  float: left;
}

.tabList.on {
  background-color: #9f0000;
}

.goodsList {
  margin: 10rpx 0;
}

.goods {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: solid 1px #f2f2f2;
  position: relative;
}

.goods text {
  display: block;
}

.goodsPic {
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin-right: 20rpx;
}

.goodsInfo {
  width: 510rpx;
  float: left;
}

.goodsName {
  font-size: 26rpx;
}

.goodsDes {
  font-size: 22rpx;
}

.goods .goodsPrice {
  display: inline-block;
  padding: 20rpx 20rpx 16rpx 0;
  color: #373737;
}

.goods  text.goodsearn {
  display: inline-block;
  color: #d50000;
}

.goods  text.goodsStock {
  display: inline-block;
  color: #373737;
  margin-left: 15rpx;
}

text.goodsNum {
  padding-bottom: 10rpx;
  font-size: 22rpx;
  color: #a3a3a3;
}

.opration {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.btn {
  background-color: #d50000;
  height: 44rpx;
  padding: 0 30rpx;
  margin-right: 12rpx;
  line-height: 44rpx;
  display: inline-block;
  color: #fff;
  border-radius: 6rpx;
}

.un-btn {
  background-color: #aaa;
  height: 44rpx;
  padding: 0 30rpx;
  margin-right: 12rpx;
  line-height: 44rpx;
  display: inline-block;
  color: #fff;
  border-radius: 6rpx;
}

.offFlag {
  width: 116rpx;
  height: 116rpx;
  position: absolute;
  top: 20rpx;
  right: 100rpx;
}

/*下架*/

.off {
  -webkit-filter: grayscale(100%);
  filter: gray;
}

.goods.off text, .goods.off .goodsPrice, .goods.off  text.goodsearn {
  color: #9e9e9e;
}

.off .btn {
  background-color: #9e9e9e;
  color: #fff;
}

.goodsNull {
  color: #aaa;
  text-align: center;
  margin-top: 100rpx;
  font-size: 50rpx;
}

.serchbox .btn-search {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.serchbox  .tip {
  text-align: center;
  font-size: 30rpx;
  padding: 75rpx 0 52rpx;
}

.popSearch {
  padding: 0 20rpx;
  text-align: center;
  display: inline-block;
}

.popSearch text {
  border: 1px solid #cecece;
  border-radius: 2px;
  padding: 16rpx 25rpx;
  word-wrap: normal;
  margin-top: 10rpx;
  display: inline-block;
}

.serchbox {
  text-align: center;
}

.addCar {
  width: 60rpx;
  margin-right: 20rpx;
}

/*加减数量*/

.cart-list .cart-count-box {
  position: absolute;
  bottom: 0rpx;
  width: 210rpx;
  height: 57rpx;
  overflow: hidden;
  right: 10rpx;
}

.cart-list .cart-count-box text {
  float: left;
  line-height: 50rpx;
  text-align: center;
  height: 52rpx;
}

.cart-count-down, .cart-count-add {
  float: left;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  text-align: center;
}

.cart-count-num {
  float: left;
  width: 70rpx;
  height: 50rpx;
  color: #636363;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
}

.goToCart {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  height: 90rpx;
  width: 90rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 50%;
}

.goToCart image {
  width: 100rpx;
}

.goToCart text {
  position: absolute;
  top: 6rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #c40000;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.goodsInfo .spacial {
  color: #d60005;
  border: 1px solid #d60005;
  font-size: 20rpx;
  padding: 2rpx 5rpx;
  display: inline;
}

.goodsInfo .spacialdis {
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 13rpx;
  background: #d60005;
  border-radius: 18rpx;
  margin-left: 10rpx;
  display: inline;
}
