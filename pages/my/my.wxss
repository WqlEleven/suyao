page{
  background-color: #f2f2f2;
  padding-bottom: 20rpx;
  font-size: 26rpx;
  color: #414141;
}
.wode_item {
	padding: 0 10px;
	line-height:82rpx;
  height: 82rpx;
	position: relative;
  background-color: #FFF;
  font-size: 26rpx;
  margin-top: 8rpx;
  border-top: 1px solid #e4e4e4;
  color: #414141;
  padding-left: 80rpx;
  text-align: left;
}
.arrow_wrap {
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 18rpx;
    height:  20rpx;
    margin-top: -10rpx;
}
.index-nav{
  background-color: #fff;
  position: relative;
  font-size:26rpx;
  width: 100%;
  padding-bottom: 90rpx;
}
.index-nav .dzjx_bg{
  width: 100%;
  height: 252rpx;
}
.shopkeeper{
  position: absolute;
  left:26rpx;
  bottom: 18rpx;
}
.shopkeeper .shoph{
  background-color: #fff;
  border-radius: 5px;
  width: 140rpx;
  height: 140rpx;
}
.shopkeeper .shoph image{
  width: 128rpx;
  height: 128rpx;
  margin: 6rpx;
}
.shopkeeper .shopmess{
  position: absolute;
  left:154rpx;
  width:300rpx;
  bottom:0; 
}
.shopkeeper .shopmess text{
  display: block;
}
.shopkeeper .firname{
  font-size: 30rpx;
  color: #373737;
  line-height: 38rpx;
}
.shopkeeper .secname{
  color: #6a6a6a;
  font-size: 26rpx;
}
.usertype{
  font-size: 26rpx;
  color: #d80000;
  border:1px solid #d80000;
  border-radius: 2px;
  /*width: 102rpx;*/
  line-height: 44rpx;
  text-align: center;
  position: absolute;
  right: 25rpx;
  bottom: 22rpx;
}
.income{
  padding: 8rpx 0;
  text-align: center;
  font-size: 26rpx;
  margin-top: 8rpx;
  color: #414141;
  background-color: #fff;
  overflow: hidden;
  border-top: 1px solid #e4e4e4;
}
.income .item{
  width: 33%;
  float: left;
  border-right: 1px solid #bdbdbd;
  line-height: 52rpx;
  padding: 10rpx 0;
}
.income .item:last-child{
  border-right: 0;
}
.income .item text{
  display: block;
}
.myorder{
  background-color: #fff;
  border-top: 1px solid #e4e4e4;
  margin-top: 8rpx;
}
.myorder .tit{
  padding: 24rpx 20rpx 24rpx 80rpx;
  position: relative;
}
.myorder .right{
  color: #999999
}
.right{
  float: right;
  margin-right: 38rpx;
}
.myorderItem{
  overflow: hidden;
  padding: 4rpx 0;
}
.myorderItem navigator{
  padding: 18rpx 0;
  text-align: center;
  width: 25%;
  box-sizing: border-box;
  border-right: 1px solid #cccccc;
  display: block;
  float: left;
}
.myorderItem navigator.nopay{
color: #f92900
}
.myorderItem navigator.norecieve{
  color: #f9aa00;
}
.myorderItem navigator.pay{
  color: #00a008;
  border-right: 0;
}
.wode_item .green{
  float: right;
  color: #00a008;
  margin-right: 35rpx;
}
.order-item{
  color: #d20000;
}
.icon{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left:20rpx;
  top:26rpx
}
.wode_money{
  padding-left:20rpx
}
.wode_item button{
  background: #fff;
  font-size:26rpx;
  color:#414141;
  text-align:left;
  border:0;
  padding-left: 0;
  line-height: 80rpx;
}
.wode_item button:after{
  border:0
}

.shares{
  background: rgba(0, 0, 0, 0.5);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  top:24rpx;
  right:30rpx;
  overflow: hidden;
}
.btn_share{ 
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx auto;
  display: block
}
.shareBox{
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
}
.shareBox .win_share{
  background: #fff;
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 40rpx 0;
  z-index: 22;
}
.shareBox .win_share .share1{
  width: 50%;
  float: left;
  text-align: center;
}
.shareBox .win_share .share1 image{
  width: 60rpx;
  height: 60rpx;
  display: inline-block
}
.shareBox .win_share .share1 text{
  display: block;
  margin-top: 20rpx;
}
.blankShare{
  position: absolute;
  top:0;
  width: 100%;
  height: 80%;
}
.shareBox button{
  background:transparent;
  font-size:26rpx;
  color:#414141;
  line-height:45rpx;
} 
.shareBox button::after {
  border:0;
  font-size: 26rpx;
  background-color: fff;
}
.shareBox .win_share .share1 button text{
  display: block;
  margin-top: 13rpx
}
