page {
   background: #f2f2f2;
   height: 100%;
   font-size: 26rpx;
}

.container {
   position: relative;
   width: 100%;
   color: #939393;
   margin-top: 24rpx;
}

.nav-left {
   display: inline-block;
   width: 212rpx;
   background: #f5f5f5;
   text-align: center;
   float: left;
}

.nav-left .nav-left-items {
   height: 30px;
   line-height: 30px;
   padding: 6px 0;
   background-color: #fff;
   margin-bottom: 15rpx;
   position: relative;
}

.nav-left .nav-left-items .cicle {
   background-color: #bebebe;
   width: 6rpx;
   height: 6rpx;
   border-radius: 50%;
   position: absolute;
   top: 40rpx;
   z-index: 1;
   left: 33rpx;
}

.nav-left .nav-left-items .arrow {
   width: 12rpx;
   height: 16rpx;
   position: absolute;
   top: 35rpx;
   right: 12rpx;
   z-index: 1;
}

.nav-left .nav-left-items.active {
   background: #c40000;
   color: #fff;
}

.nav-left .nav-left-items.active .cicle {
   background-color: #fff;
   width: 10rpx;
   height: 10rpx;
   top: 40rpx;
   z-index: 1;
   left: 33rpx;
}

.nav_rightbox {
   width: 527rpx;
   background: #fff;
   float: left;
   margin-left: 11rpx;
}

.nav_rightbox .nav_right_items {
   float: left;
   width: 33.33%;
   height: 80px;
   text-align: center;
   margin-top: 30rpx;
}

.nav_rightbox .nav_right_items image {
   width: 118rpx;
   height: 118rpx;
}

.nav_rightbox .nav_right_items text {
   display: block;
   margin-top: 10rpx;
   overflow: hidden;
   white-space: nowrap;
   text-overflow: ellipsis;
}

.search {
   background-color: #c40000;
   padding: 26rpx 50rpx;
   position: relative;
}

.search input {
   background-color: #fff;
   border-radius: 2px;
   padding: 5rpx 70rpx 5rpx 22rpx;
   line-height: 64rpx;
}

.search .btn-search {
   width: 32rpx;
   height: 32rpx;
   position: absolute;
   right: 80rpx;
   top: 40rpx;
   z-index: 1;
}

.nogoods {
   text-align: center;
   padding-top: 40rpx;
}
