/* pages/gift/gift.wxss */
page{
  background: #f2f2f2;
}
.slide-image{
  display: block;
  width: 100%;
  height: 350rpx;
}
.price{
  text-align:left;
  color:#ec0000;
}
.title{
  font-size: 26rpx;
  color: #565656;
  position:relative;
  background: #fff;
  padding: 30rpx 20rpx 30rpx 80rpx;
  border-bottom:10rpx solid #f2f2f2;
   
}
.title text{
  font-size: 30rpx;
  color: #ec0000;
  float: right;
}
.pos{
  position:absolute;
  left:20rpx;
  top:30rpx;
  width:40rpx;
  height:40rpx;
}
.buy{
  background: #c40000;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  padding: 30rpx 0;
  display: block;
  width: 100%;
  position: fixed;
  bottom: 0
}
.blank{
  height: 120rpx;
}
.img image{
  display: block;
  width: 100%;
}
.item{
  background: #fff;
  line-height: 30rpx;
  padding: 20rpx 20rpx;
}