  background-color: #fff;
  border-radius: 2px;
  padding: 5rpx 70rpx 5rpx 22rpx;
  line-height: 64rpx;
}
.search .btn-search{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right:80rpx;
  top:40rpx;
  z-index: 1;
}
.tab{
