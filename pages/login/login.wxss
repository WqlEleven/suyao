/* pages/login/login.wxss */
page{
  background-color: #f2f2f2;
}
.logo{
  width: 392rpx;
  height: 110rpx;
  margin: 115rpx auto;
}
.logo image{
  width: 392rpx;
  height: 110rpx;
}
.item{
  font-size: 30rpx;
  padding: 0 64rpx 38rpx;
  position: relative;
}
.item input{
  background-color: #fff;
  border:1px solid #9c9c9c;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 30rpx;
  padding: 0 28rpx;
  
}
.item input::-moz-placeholder{
color: #b9b9b9;
}
.btn text{
  display: block;
  background-color: #c40000;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
}
.btn-send{
  background-color: #c40000;
  color: #fff;
  text-align: center;
  line-height: 86rpx;
  position: absolute;
  top:1px;
  right: 67rpx;
  width: 252rpx;
  z-index: 1;
  font-size: 24rpx;
}
.error{
  color:#c40000;
  font-size: 24rpx;
  padding: 0 64rpx;
  margin-top: -20rpx;
}