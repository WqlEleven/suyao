/*秒杀*/
.seckill{
  margin-top: 16rpx;
  background-color: #fff;
  border-top:1px #e8e8e8 solid;
  border-bottom:1px #e8e8e8 solid;
}
.seckill .title{
  padding: 30rpx 20rpx;
  overflow: hidden;
}
.seckill .title image{
  width: 160rpx;
  height: 40rpx;
  float: left;
  margin-top: 5rpx;
}
.seckill .timeSlot{
  float: left;
  padding-left: 30rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.seckill .timeSlot .leaveTime{
  padding-left: 20rpx;
  font-weight: normal;
  color: #000;
}
.seckill .more{
  float: right;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #d60005;
}
.seckill .more:after{
  content: '>';
  width: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 10rpx;
  display: inline-block;
  transform: scaleY(1.5);
}
.seckill .slideGoods{
  padding: 0 20rpx;
  height: 340rpx;
  overflow: hidden;
  box-sizing:border-box;
}
.seckill .slideGoods .item{
  width: 200rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.seckill .slideGoods .item:last-child{
  margin-right: 0;
}
.seckill .slideGoods .item image{
  height: 200rpx;
  width: 200rpx;
  display: block;
}
.seckill .slideGoods .item .name{
  padding-top: 10rpx;
  width: 200rpx;
  display: block;
  height: 72rpx;
  overflow: hidden;
  line-height: 36rpx;
  font-size: 26rpx;
  color: #333;
}
.seckill .slideGoods .item .price{
  display: block;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #d60005;
}
.seckill .slideGoods .item .price text{
  padding-left: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: #999;
}