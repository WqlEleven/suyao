/*筛选项隐藏 显示动画 start*/

@keyframes slidown {
  from {
    transform: translateY(0%);
    opacity: 0;
  }

  to {
    transform: translateY(100%);
    opacity: 1;
  }
}

.slidown {
  display: block;
  /* animation: slidown 0.1s ease-in both; */
}

@keyframes slidup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0%);
  }
}

.slidup {
  display: none;
  /* animation: slidup 0.2s ease-in both; */
}

